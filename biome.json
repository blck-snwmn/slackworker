{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"formatter": {
		"includes": [
			"**",
			"!renovate.json",
			"!**/node_modules/**/*",
			"!**/*/build/**/*",
			"!**/*/.wrangler/**/*",
			"!**/graphql/src/gql/**/*"
		]
	},
	"linter": {
		"includes": [
			"**",
			"!**/node_modules/**/*",
			"!**/*/build/**/*",
			"!**/*/.wrangler/**/*",
			"!**/*/gql/**/*"
		],
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
